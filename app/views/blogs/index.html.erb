<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<%= form_with url: blogs_path, method: :get do |f| %>
  <%= f.label :search_title, 'タイトル検索' %>
  <%= f.text_field :search_title %>
  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="blog-list">
    <%= render @blogs %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
